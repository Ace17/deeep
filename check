#!/usr/bin/env bash
set -euo pipefail

echo "----------------------------------------------------------------"
echo "Reformatting ..."
scripts/reformat.sh "src"
scripts/reformat.sh "engine"
scripts/reformat.sh "tests"

echo "----------------------------------------------------------------"
echo "Building native version"

BIN=bin/native \
  make -j`nproc`

./bin/native/tests.exe

echo "----------------------------------------------------------------"
echo "Building Windows version"

BIN=bin/w64 \
  ./scripts/w64-make -j`nproc`

echo OK
